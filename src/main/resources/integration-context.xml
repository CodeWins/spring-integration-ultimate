<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xmlns:int="http://www.springframework.org/schema/integration"
	xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd
		http://www.springframework.org/schema/integration http://www.springframework.org/schema/integration/spring-integration-5.2.xsd">

<int:channel id="messageChannel"></int:channel>

<bean class = "iva.springintegration.PrintService" id="printservice"></bean>
<int:service-activator ref="printservice" method="printChannel" input-channel="inputChannel"></int:service-activator>
</beans>
